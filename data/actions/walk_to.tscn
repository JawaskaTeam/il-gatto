# Makes the cat walk to a certain direction


# Called when the node enters the scene tree for the first time.
func _ready():
	pass # Replace with function body.


# Called every frame. 'delta' is the elapsed time since the previous frame.
#func _process(delta):
#	pass


# @override
func start(args: Array = []):
	# push an error if no position was specified
	if args.size() <= 0:
		push_error('No position specified.')
	
	# make cat move to the desired position
	cat.go_to(args[0])
	cat.connect('stopped_moving', self, '_on_action_ended')


# @override
func _on_action_ended():
	cat.disconnect('stopped_moving', self, '_on_action_ended')
	._on_action_ended()
