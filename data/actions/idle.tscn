# Idle action
# @author Alberto Blanco Celdr√°n
# @date 03/10/2021
# A timed idle action

onready var timer: Timer = $timer


# Called when the node enters the scene tree for the first time.
func _ready():
	timer.connect('timeout', self, '_on_action_ended')


# Called every frame. 'delta' is the elapsed time since the previous frame.
#func _process(delta):
#	pass


# @override
func start(args: Array = []):
	# push an error if no time was specified
	if args.size() <= 0:
		push_error('No time provided.')
	
	# setup timer and run it
	timer.start(args[0])
