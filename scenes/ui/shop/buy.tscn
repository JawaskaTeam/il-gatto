# @override
func _on_click():
	Shop.buy(item.name)


# Called when money value changes.
func _on_balance_changed():
	var can_afford = GameState.money.can_afford(Shop.get_buy_item(item.name).price)
	if can_afford:
		icon.modulate.r = 1
		icon.modulate.g = 1
		icon.modulate.b = 1
	else:
		icon.modulate.r = 0
		icon.modulate.g = 0
		icon.modulate.b = 0
